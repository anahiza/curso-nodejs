extends ../../layout.pug
block contenido
  div(class="col-md-6 remove-float center-block big-top-space")
    h1 Subir una nueva imagen
    form(action="/imagenes", method="POST")   
      div(class="form-group")
        label(for="titulo") Título:        
        input(type="text", name="titulo", placeholder="Título de la imagen..." class="form-control") 
      div(class="form-group")
        label(for="archivo") Imagen: 
        input(type="file" name="archivo" class="form-control" placeholder="Selecciona un archivo")
      div(class="row top-space")
        div(class="col-xs-12 col-sm-6")
          input(type="submit" value="Iniciar sesión" class="btn btn-info")
        div(class="col-xs-12 col-sm-6 text-right")
          a(href="/signup") No tengo usuario
