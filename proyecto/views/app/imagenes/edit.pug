extends ../../layout.pug
block contenido
  div(class="col-md-6 remove-float center-block big-top-space")
    h1 Editar imagen
    form(action="/app/imagenes/"+imagen._id+"?_method=PUT" method="POST")
      div(class="form-group")
        label(for="titulo") Título:        
        input(type="text", name="titulo", placeholder="Título de la imagen..." class="form-control" value=imagen.titulo) 
      div(class="form-group")
        label(for="archivo") Imagen: 
        input(type="file" name="archivo" class="form-control" placeholder="Selecciona un archivo")
      div(class="row top-space")
        div(class="col-xs-12 col-sm-6")
          input(type="submit" value="Guardar" class="btn btn-info")

